# Site Configuration
# Base URL for OAuth redirects (set to your production URL in production)
NEXTAUTH_URL=https://codelix-vitae-production.up.railway.app

# Alternative site URL (fallback)
NEXT_PUBLIC_SITE_URL=https://codelix-vitae-production.up.railway.app

# Supabase Configuration
# Your Supabase project URL (found in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Your Supabase anonymous key (found in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (found in your Supabase dashboard - API settings)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
# Your OpenAI API key (optional - for AI suggestions feature)
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration
# Your Stripe publishable key (found in your Stripe dashboard)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Your Stripe secret key (found in your Stripe dashboard)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Your Stripe webhook secret (generated when you create a webhook endpoint)
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Your Stripe price IDs for monthly and yearly subscriptions
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY=price_monthly_id_here
NEXT_PUBLIC_STRIPE_PRICE_YEARLY=price_yearly_id_here 